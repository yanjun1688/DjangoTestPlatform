# 环境变量文档
# 本文件定义了项目中所有可用的环境变量及其说明

# ===========================================
# Django 核心配置
# ===========================================

# SECRET_KEY: Django密钥，生产环境必须使用安全的随机字符串
SECRET_KEY=your-secret-key-here

# DEBUG: 调试模式，生产环境必须设置为False
DEBUG=False

# ALLOWED_HOSTS: 允许的主机名，生产环境需要设置具体域名
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# 数据库配置
# ===========================================

# 开发环境使用SQLite
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# 生产环境建议使用PostgreSQL
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=test_platform_db
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# ===========================================
# CORS和前端配置
# ===========================================

# CORS允许的源地址，用逗号分隔
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# 前端基础URL
FRONTEND_URL=http://localhost:5173

# ===========================================
# 日志配置
# ===========================================

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=debug.log

# 日志文件最大大小(MB)
LOG_MAX_SIZE=5

# 保留的日志文件数量
LOG_BACKUP_COUNT=5

# ===========================================
# API和网络配置
# ===========================================

# API请求超时时间(秒)
API_REQUEST_TIMEOUT=30

# 文件上传大小限制(MB)
FILE_UPLOAD_MAX_SIZE=10

# ===========================================
# 安全配置
# ===========================================

# 会话超时时间(秒)
SESSION_TIMEOUT=3600

# 密码最小长度
PASSWORD_MIN_LENGTH=8

# 启用两步验证
ENABLE_2FA=False

# ===========================================
# 测试配置
# ===========================================

# 测试数据保留天数
TEST_DATA_RETENTION_DAYS=30

# 并发测试最大数量
MAX_CONCURRENT_TESTS=5

# ===========================================
# 环境标识
# ===========================================

# 环境类型: development, staging, production
ENVIRONMENT=development

# 版本号
VERSION=1.0.0