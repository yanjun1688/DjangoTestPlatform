# Django后端环境变量配置模板
# 复制此文件为.env并根据实际情况修改

# Django基础配置
SECRET_KEY=django-insecure-example-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,testserver,0.0.0.0

# 数据库配置 - 开发环境默认使用SQLite
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# PostgreSQL配置（生产环境推荐）
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=test_platform_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-secure-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# CORS配置 - 前后端分离必需
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# 静态文件配置
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# 文件上传配置
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# 缓存配置（可选，提升性能）
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# Session配置
SESSION_COOKIE_AGE=3600  # 1小时
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# 时区配置
TIME_ZONE=Asia/Shanghai
USE_TZ=True

# 邮件配置（可选，用于通知功能）
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# API文档配置
SPECTACULAR_SETTINGS_TITLE=Django Test Platform API
SPECTACULAR_SETTINGS_VERSION=1.0.0

# 测试环境配置
TEST_RUNNER=django.test.runner.DiscoverRunner
TEST_DATABASE_PREFIX=test_